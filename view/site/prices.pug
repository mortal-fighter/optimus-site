doctype
html(lang="ru")
	head
		title Академия робототехники ОПТИМУС | Цены
		meta(charset="UTF-8")
		meta(name="description", content="Академия робототехники Оптимус")
		meta(http-equiv="content-language", content="ru")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

		<!-- jquery -->
		script(src="/lib/jquery/jquery-2.2.3.min.js")
		
		<!-- bootstrap -->
		script(src="/lib/bootstrap/bootstrap.min.js")
		link(rel="stylesheet", type="text/css", href="/lib/bootstrap/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="/lib/bootstrap/bootstrap-theme.css")

		link(rel="stylesheet", type="text/css", href="/css/main.css")
		link(rel="stylesheet", type="text/css", href="/css/prices.css")
		
	body
		div.container
			nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
				div.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar-collapse-main")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					span.navbar-brand  
						span.part1 Академия робототехники 
						span.part2 "ОПТИМУС" 
				div#navbar-collapse-main.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href="/") ГЛАВНАЯ
						li
							a(href="/about") О НАС
						li
							a(href="/about") НОВОСТИ	
						li
							a(href="schedule") РАСПИСАНИЕ
						li
							a.current ЦЕНЫ	
						li
							a(href="contacts") КОНТАКТЫ
			div.prices
				h2 Стоимость обучения
				table.table.table-bordered
					tr 
						td Количество занятий
						td Стоимость (руб.)
					tr 
						td 16 занятий
						td 5000
					tr 
						td 8 занятий
						td 2800	
					tr 
						td 4 занятия
						td 1600
					tr 
						td Разовое занятие
						td 450
		include includes/analytics.pug