doctype
html(lang="ru")
	head
		title Академия робототехники ОПТИМУС | Новости
		meta(charset="UTF-8")
		meta(name="description", content="Академия робототехники Оптимус")
		meta(http-equiv="content-language", content="ru")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

		<!-- jquery -->
		script(src="/lib/jquery/jquery-2.2.3.min.js")
		
		<!-- bootstrap -->
		script(src="/lib/bootstrap/bootstrap.min.js")
		link(rel="stylesheet", type="text/css", href="/lib/bootstrap/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="/lib/bootstrap/bootstrap-theme.css")

		<!-- jquery ui -->
		script(src="/lib/jquery_ui/tabs/jquery-ui.min.js")
		link(rel="stylesheet", type="text/css", href="/lib/jquery_ui/tabs/jquery-ui.min.css")

		link(rel="stylesheet", type="text/css", href="/css/main.css")
		link(rel="stylesheet", type="text/css", href="/css/news.css")
		script(src="/js/news.js")
		
	body
		div.container
			nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
				div.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target="#navbar-collapse-main")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					span.navbar-brand  
						span.part1 Академия робототехники 
						span.part2 "ОПТИМУС" 
				div#navbar-collapse-main.collapse.navbar-collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href="/") ГЛАВНАЯ
						li
							a(href="about") О НАС
						li
							a.current НОВОСТИ
						li
							a(href="schedule") РАСПИСАНИЕ
						li
							a(href="prices") ЦЕНЫ	
						li
							a(href="contacts") КОНТАКТЫ
			div.news
				div#tabs
					ul
						li
							a(href="/api/news/type/1") Новости
						li
							a(href="/api/news/type/4") Интересное
						li
							a(href="/api/news/type/2") СМИ о нас
						li
							a(href="/api/news/type/3") Для родителей
		div#popup-window
			div.popup-header
				div.popup-close закрыть
			div.popup-content
		include includes/analytics.pug