doctype
html(lang="ru")
	head
		title ОПТИМУС | Административная панель | Вход
		meta(charset="UTF-8")
		meta(name="description", content="Академия робототехники Оптимус")
		meta(http-equiv="content-language", content="ru")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

		<!-- jquery -->
		script(src="/lib/jquery/jquery-2.2.3.min.js")
			
		<!-- bootstrap -->
		script(src="/lib/bootstrap/bootstrap.min.js")
		link(rel="stylesheet", type="text/css", href="/lib/bootstrap/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="/lib/bootstrap/bootstrap-theme.css")

		link(rel="stylesheet", type="text/css", href="/css/admin/main.css")
		script(src="/js/admin/main.js")
		script(src="/js/admin/login.js")
	body
		div.container
			div.login
				h2 Вход в административную панель
				div.message(class="msg-"+locals.messageType)= locals.message
				form(class="form-horizontal")
					div.form-group
						label(for="login", class="col-sm-4 control-label") Пользователь
						div.col-sm-8
							input(type="text", class="form-control", id="login", placeholder="")
					div.form-group
						label(for="password", class="col-sm-4 control-label") Пароль
						div.col-sm-8
							input(type="password", class="form-control", id="password", placeholder="")
					div.form-group
						label(for="auth-send", class="col-sm-4 control-label")
						div.col-sm-8
							input(class="btn btn-default", type="button", value="Войти", id="auth-enter")
		include includes/analytics.pug